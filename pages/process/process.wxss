.header {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.header image {
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.header text {
  color: rgba(0, 0, 0, 0.78);
  line-height: 50rpx;
}

.wall {
  height: 300rpx;
  width: 100%;
  background: #aaa;
}

.xview {
  display: flex;
  margin: 20rpx 20rpx 50rpx 20rpx;
  color: rgba(0, 0, 0, 0.38);
  font-size: 0.8em;
  justify-content: space-between;
  border-bottom: 2rpx solid #e5e5e5;
  padding-bottom: 20rpx;
}

.taskText {
  margin: 10rpx;
}

.taskScroll {
  height: 500rpx;
}

.item {
  display: flex;
  color: rgba(0, 0, 0, 0.38);
}

.item text {
  line-height: 80rpx;
  margin: 10rpx auto 0 50rpx;
}

.item image {
  width: 40rpx;
  height: 40rpx;
  margin: auto 20rpx auto auto;
}

.item-no {
  display: flex;
}

.item-no text {
  line-height: 80rpx;
  margin: 10rpx auto 0 50rpx;
}
